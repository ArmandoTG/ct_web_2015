@using NorthwindLab03.Helpers
@model IEnumerable<NorthwindLab03.Models.Categories>

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Categories", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-2">
            Contains
        </div>
        <div class="col-md-2">
            <input type="text" name="filter" value="@ViewBag.Filter" width="30em" />
            @Html.Hidden("txtOculto")
        </div>
        <div class="col-md-2">
            <button type="submit">Filter</button>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>

@Html.RenderTrace((String)@ViewBag.TraceMessage)

